<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StartSessionServelet</servlet-name>
        <servlet-class>za.ac.tut.web.myServlet.StartSessionServelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EncryptMessageSevelet</servlet-name>
        <servlet-class>za.ac.tut.web.myServlet.EncryptMessageSevelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>za.ac.tut.web.myServlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>view_decrypted_messages</servlet-name>
        <servlet-class>za.ac.tut.web.myServlet.view_decrypted_messages</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>view_longest_message</servlet-name>
        <servlet-class>za.ac.tut.web.myServlet.view_longest_message</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartSessionServelet</servlet-name>
        <url-pattern>/StartSessionServelet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EncryptMessageSevelet</servlet-name>
        <url-pattern>/EncryptMessageSevelet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>view_decrypted_messages</servlet-name>
        <url-pattern>/view_decrypted_messages.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>view_longest_message</servlet-name>
        <url-pattern>/view_longest_message.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>computer_name</param-name>
        <param-value>Siri</param-value>
    </context-param>
</web-app>
